<body>
    <div>
        <div class="header">
            <div class="navbar">
                <div>
                    <nav class="nav">
                        <a href="/">
                            <button>Home</button>
                        </a>
                        {{#if loggedIn}}
                        <a href="/dashboard">
                            <button>Dashboard</button>
                        </a>
                        {{/if}}
                    </nav>
                </div>
                <div>
                    {{#if loggedIn}}
                    <button id="logout">Logout</button>
                    {{else}}
                    <a href="/signup">
                        <button>Sign up</button>
                    </a>
                    <a href="/login">
                        <button>Login</button>
                    </a>
                    {{/if}}
                </div>
            </div>
            <div>
                <h1>Computers For All</h1>
            </div>
        </div>
        <main class="wrapper">
                {{{body}}}
        </main>
        <footer>
            <div>
                Thanks for Visiting
            </div>
        </footer>
    </div>
    {{#if loggedIn}}
